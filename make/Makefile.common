ROOT=$(shell pwd)
MAKE_INSTALL:=$(MAKE) install
MAKE:=$(MAKE) -j4
BUILDS=$(ROOT)/build

TARGET:=native
ifneq "$(TARGET)" "native"
    ifneq (,$(findstring aarch64,$(TARGET)))
        ARCH:=arm64
        HOSTARCH:=aarch64
    endif
    ifneq (,$(findstring arm,$(TARGET)))
        ARCH:=arm
        HOSTARCH:=arm
    endif
    ifneq (,$(findstring mipsel,$(TARGET)))
        ARCH:=mipsel
        HOSTARCH:=mipsel
    endif
    ifneq (,$(findstring mips-,$(TARGET)))
        ARCH:=mips
        HOSTARCH:=mips
    endif
    ifneq (,$(findstring powerpc,$(TARGET)))
        ARCH:=powerpc
        HOSTARCH:=powerpc
    endif
    ifneq (,$(findstring i486,$(TARGET)))
        ARCH:=x86
        HOSTARCH:=i386
    endif
    ifneq (,$(findstring x86_64,$(TARGET)))
        ARCH:=x86
        HOSTARCH:=x86_64
    endif
    BUILD:=$(BUILDS)/cross-$(TARGET)
else
    BUILD:=$(BUILDS)/native-$(shell uname -s|tr '[:upper:]' '[:lower:]').$(shell uname -m)
endif

LOGFILE=$(BUILD)/build.log
ERRFILE=$(BUILD)/build.err
DEPS=$(ROOT)/deps
OUTPUTDIR=$(BUILD)/data

CFLAGS:=$(CFLAGS) -g -O -I$(BUILD)/include
CPPFLAGS:=-I$(BUILD)/include
CONFIGURE=configure --prefix=$(BUILD) --disable-shared ac_cv_path_PKGCONFIG=$(CWD)/pkg-config
ifneq "$(TARGET)" "native"
    ifneq (,$(findstring mingw,$(TARGET)))
        HOST=$(firstword $(subst -, ,$(HOSTARCH)))-w64-mingw32
    else
        HOST=$(firstword $(subst -, ,$(HOSTARCH)))-linux-gnu
    endif
endif
ifneq "$(HOST)" ""
    CONFIGURE:=$(CONFIGURE) --host=$(HOST)
endif

CFLAGS:=$(CFLAGS) -Os -fPIE

ifeq "$(ARCH)" "sparc"
    CFLAGS:=$(CFLAGS) -fPIC
else
    CFLAGS:=$(CFLAGS) -fpic
endif

ENV=LDFLAGS="-L$(BUILD)/lib $(LDFLAGS)" CC=$(CC) CPP=/usr/bin/cpp AR=$(AR) RANLIB=$(RANLIB) CFLAGS="$(CFLAGS)" CPPFLAGS="$(CPPFLAGS)"

LOGBUILD:=>>$(LOGFILE)
ifeq "$(V)" "1"
    LOGBUILD:=
endif
ifeq "$(VERBOSE)" "1"
    LOGBUILD:=
endif

ifeq "$(shell uname -s)" "Darwin"
    ELLCC_HOST=osx
    ifeq ("$(wildcard /usr/local/opt/coreutils/libexec/gnubin/install)", "")
        $(info "Gnu install is not found, try 'brew install coreutils")
    else
        export PATH:=/usr/local/opt/coreutils/libexec/gnubin:$(PATH)
    endif
endif

