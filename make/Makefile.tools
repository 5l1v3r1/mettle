BUILD_HOST=linux
ifneq "$(TARGET)" "native"
    CC=$(ROOT)/build/tools/musl-cross/bin/$(TARGET)-cc
    CPP=$(ROOT)/build/tools/musl-cross/bin/$(TARGET)-cpp
    AR=$(ROOT)/build/tools/musl-cross/bin/$(TARGET)-ar
    LD=$(ROOT)/build/tools/musl-cross/bin/$(TARGET)-ld
    RANLIB=$(ROOT)/build/tools/musl-cross/bin/$(TARGET)-ranlib
endif

TAR=tar
ELF2BIN=build/tools/elf2bin

$(ELF2BIN): util/elf2bin.c
	@mkdir -p build/tools
	cc -g -o $@ $< -static

INSTALL=install
export PATH:=$(ROOT)/build/tools/musl-cross/bin:$(PATH)
ifeq "$(shell uname -s)" "Darwin"
    BUILD_HOST=osx
    ifeq ("$(wildcard /usr/local/opt/coreutils/libexec/gnubin/install)", "")
        $(info "Gnu install is not found, try 'brew install coreutils")
    else
        export PATH:=/usr/local/opt/coreutils/libexec/gnubin:$(PATH)
    endif
endif

musl-cross-$(BUILD_HOST)-2.tar.xz:
	@echo "Downloading toolchain"
	curl -f -O https://s3.amazonaws.com/muslcross/musl-cross-$(BUILD_HOST)-2.tar.xz

$(ROOT)/build/tools/musl-cross/lib/libcc1.so: musl-cross-$(BUILD_HOST)-2.tar.xz
	@echo "Unpacking toolchain"
	@rm -fr build/tools/musl-cross
	@mkdir -p build/tools/musl-cross
	@cd build/tools && tar xfm $(ROOT)/musl-cross-$(BUILD_HOST)-2.tar.xz

TOOLS_DEPS=
ifneq "$(TARGET)" "native"
  TOOLS_DEPS=$(ROOT)/build/tools/musl-cross/lib/libcc1.so $(ELF2BIN)
endif

build/tools: $(TOOLS_DEPS)
	mkdir -p build/tools	
